{
  "compilerOptions": {
    "target": "es6",                         // JavaScript version to compile to
    "module": "commonjs",                    // Module system to use
    "outDir": "./dist",                      // Output directory for compiled JS files
    "rootDir": "./src",                      // Root directory of your TypeScript files
    "strict": true,                          // Enable all strict type-checking options
    "esModuleInterop": true,                 // Enable emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                    // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Disallow inconsistently-cased references to the same file
  },
  "include": ["src/**/*"],                   // Files to include in compilation
  "exclude": ["node_modules"]                // Files to exclude
}